@model GYM_APP.ViewModels.MemberVMs.PaymentSuccessViewModel
@{
    ViewData["Title"] = "Payment Success";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow p-5 text-center" style="max-width: 500px; border-radius: 16px;">
        <img src="~/images/payment_success.png" alt="Success" style="width: 120px;" class="mb-4 mx-auto">
        <h3 class="text-success fw-bold mb-3">Payment Successful!</h3>
        <p class="text-muted mb-4">
            Thank you! Your payment has been confirmed and your subscription is now active.
        </p>
        <a asp-action="Profile" asp-controller="Member" class="btn btn-primary px-4">Go to My Profile</a>
    </div>
</div>