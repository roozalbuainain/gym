@model List<GYM_APP.ViewModels.MemberVMs.MyClassesViewModel>
@{
    ViewData["Title"] = "My Classes";
}

<partial name="_Navbar" />

<div class="container py-5">
    <h3 class="text-center mb-4">My Booked Classes</h3>

    <div class="row">
        @if (Model.Any())
        {
            @foreach (var classItem in Model)
            {
                <div class="card col-md-6 mb-4 shadow-sm">
                    <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@classItem.ClassName</h5>
                        <span>@classItem.Capacity total seats</span>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            @foreach (var schedule in classItem.Schedules)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>
                                        <i class="fas fa-clock me-1 text-primary"></i> @schedule.DayOfWeek - @schedule.Time
                                    </span>
                                    <span class="badge bg-success">Booked</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-12 alert alert-info text-center">You haven't booked any classes yet.</div>
        }
    </div>
</div>