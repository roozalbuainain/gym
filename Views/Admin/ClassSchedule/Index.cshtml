@model IEnumerable<GYM_APP.Models.ClassSchedule>

@{
    ViewData["Title"] = "Class Schedules";
}

<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5>Class Schedules</h5>
        <a asp-action="Create" class="btn btn-primary">Add New</a>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Class</th>
                    <th>Day</th>
                    <th>Time</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var schedule in Model)
                {
                    <tr>
                        <td>@(schedule.Classes?.ClassesName ?? "-")</td>
                        <td>@schedule.ClassScheduleDayOfWeek</td>
                        <td>@schedule.ClassScheduleTime.ToString()</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@schedule.ClassScheduleId" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@schedule.ClassScheduleId" />
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this?')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>