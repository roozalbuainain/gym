@model GYM_APP.ViewModels.AttendanceVMs.AttendanceIndexViewModel

@{
    ViewData["Title"] = "Member Attendance Logs";
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Member Attendance Logs</h5>
    </div>
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-dark">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-sign-in-alt fa-2x me-3 text-primary"></i>
                    <div>
                        <h5 class="mb-1">Total Check-ins</h5>
                        <p class="fs-4 mb-0">@Model.TotalCheckins</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-dark">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-sign-out-alt fa-2x me-3 text-danger"></i>
                    <div>
                        <h5 class="mb-1">Total Check-outs</h5>
                        <p class="fs-4 mb-0">@Model.TotalCheckouts</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-dark">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-percentage fa-2x me-3 text-info"></i>
                    <div>
                        <h5 class="mb-1">Attendance Rate</h5>
                        <p class="fs-4 mb-0">@Model.AttendanceRate%</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-dark">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-user-check fa-2x me-3 text-warning"></i>
                    <div>
                        <h5 class="mb-1">Top Member</h5>
                        <p class="fs-5 mb-0">@Model.MostActiveMember</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form method="GET" class="row g-2 mb-4">
        <div class="col-md-3">
            <input type="text" name="member" value="@Model.Member" class="form-control" placeholder="Member Name">
        </div>
        <div class="col-md-3">
            <input type="date" name="from" value="@(Model.From?.ToString("yyyy-MM-dd"))" class="form-control" placeholder="From Date">
        </div>
        <div class="col-md-3">
            <input type="date" name="to" value="@(Model.To?.ToString("yyyy-MM-dd"))" class="form-control" placeholder="To Date">
        </div>
        <div class="col-md-3">
            <select name="classId" class="form-select">
                <option value="">All Classes</option>
                @foreach (var cls in Model.Classes)
                {
                    <option value="@cls.ClassesId" selected="@(Model.ClassId == cls.ClassesId)">
                        @cls.ClassesName
                    </option>
                }
            </select>
        </div>
        <div class="col-md-12 text-end">
            <button class="btn btn-primary"><i class="fas fa-filter me-1"></i> Apply Filters</button>
        </div>
    </form>

    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>[ID] Member</th>
                    <th>Class</th>
                    <th>Schedule</th>
                    <th>Date</th>
                    <th>Check-In</th>
                    <th>Check-Out</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var att in Model.Attendances)
                {
                    <tr>
                        <td>[@(att.Users?.UsersId.ToString() ?? "-")] @(att.Users?.UsersName ?? "-")</td>
                        <td>@(att.MemberAttendances.FirstOrDefault()?.ClassSchedule?.Classes?.ClassesName ?? "N/A")</td>
                        <td>
                            @(att.MemberAttendances.FirstOrDefault()?.ClassSchedule?.ClassScheduleDayOfWeek ?? "N/A")
                            [@(att.MemberAttendances.FirstOrDefault()?.ClassSchedule?.ClassScheduleTime?.ToString() ?? "N/A")]
                        </td>
                        <td>@att.AttendancesTime?.ToString("g")</td>
                        <td>@(att.AttendancesCheckInTime?.ToString("g") ?? "—")</td>
                        <td>@(att.AttendancesCheckOutTime?.ToString("g") ?? "—")</td>
                        <td>
                            @if (att.AttendancesStatus == "Present")
                            {
                                <span class="badge bg-success">Present</span>
                            }
                            else if (att.AttendancesStatus == "absent")
                            {
                                <span class="badge bg-danger">Absent</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Unknown</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
}