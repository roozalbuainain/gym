@model GYM_APP.ViewModels.TrainerVMs.TrainerHomeViewModel

@{
    ViewData["Title"] = "Trainer Dashboard";
}

<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8 flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Trainer Dashboard</h1>
            <p class="text-gray-600">Manage your classes and schedules with ease</p>
        </div>
        <a asp-controller="Trainer" asp-action="Calendar" class="btn btn-primary text-white px-4 py-2 rounded hover:bg-blue-700 transition flex items-center">
            <i class="fa-solid fa-calendar-days mr-2"></i> View Calendar
        </a>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white shadow-sm rounded-lg p-6 flex items-center">
            <i class="fa-solid fa-dumbbell text-3xl text-dark mr-4"></i>
            <div>
                <h6 class="text-gray-600 text-sm">Total Classes</h6>
                <p class="text-2xl font-bold text-gray-800">@Model.Classes.Count</p>
            </div>
        </div>
        <div class="bg-white shadow-sm rounded-lg p-6 flex items-center">
            <i class="fa-solid fa-users text-3xl text-dark mr-4"></i>
            <div>
                <h6 class="text-gray-600 text-sm">Total Bookings</h6>
                <p class="text-2xl font-bold text-gray-800">@Model.Classes.Sum(c => c.BookingsCount)</p>
            </div>
        </div>
        <div class="bg-white shadow-sm rounded-lg p-6 flex items-center">
            <i class="fa-solid fa-calendar-check text-3xl text-dark mr-4"></i>
            <div>
                <h6 class="text-gray-600 text-sm">Upcoming Schedules</h6>
                <p class="text-2xl font-bold text-gray-800">@Model.Schedules.Count</p>
            </div>
        </div>
    </div>
</div>