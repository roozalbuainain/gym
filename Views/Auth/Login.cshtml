@model GYM_APP.ViewModels.AuthVMs.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="login-section d-flex justify-content-center align-items-center" style="min-height: 100vh">
    <div class="login-card p-4 shadow rounded w-100" style="max-width: 420px; background: #fff">
        <h2 class="text-center fw-bold mb-2">Welcome Back</h2>
        <img src="~/images/fitness_center.png" alt="Fitness Center" class="img-fluid mb-3">
        <h5 class="text-center mb-4 text-muted">Login to Fitness Women</h5>

        <!-- Debug: Show all validation errors -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>Validation Errors:</strong>
                <ul>
                    @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@modelError.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <!-- Show TempData messages -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <form method="POST" asp-action="Login" asp-controller="Auth">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="UserType" class="form-label float-start">User Type</label>
                <select asp-for="UserType" class="form-select" required>
                    <option value="">Select User Type</option>
                    <option value="member">Member</option>
                    <option value="admin">Admin</option>
                    <option value="trainer">Trainer</option>
                    <option value="assistant">Assistant</option>
                </select>
                <span asp-validation-for="UserType" class="text-danger small d-block mt-1"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label float-start">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" required>
                <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label float-start">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required>
                <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Login</button>

            <p class="text-center mt-3 mb-1">
                Don't have an account?
                <a asp-action="Register" asp-controller="Auth">Register</a>
            </p>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}